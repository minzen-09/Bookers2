<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto py-3">
      
      <h1>Editing Book</h1>

      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-3">
          <label for="book_title" class="form-label">Title</label>
          <%= f.text_field :title, class: "form-control", id: "book_title" %>
        </div>
      
        <div class="mb-3">
          <label for="book_body" class="form-label">Opinion</label>
          <%= f.text_area :body, class: "form-control", id: "book_body" %>
        </div>
      
        <div>
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "Show", @book %> | <%= link_to "Back", books_path %>
      </div>

    </div>  
  </div>
</div>

