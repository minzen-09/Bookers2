<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!-- ユーザープロフィール編集画面 -->

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto py-3">
      
      <h2>User info</h2>

      <%= form_with model: @user, local: true do |f| %>
        <div class="mb-3">
          <label for="inputName" class="form-label">Name</label>
          <%= f.text_field :name, value: @user.name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>
      
        <div class="mb-3">
          <div class="mb-2">
            <label for="inputImage" class="form-label">Image</label>
          </div>
          <div>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
      
        
        <div class="mb-3">
          <label for="inputIntroduction" class="form-label">Introduction</label>
          <%= f.text_area :introduction, id: "inputIntroduction", placeholder: "自己紹介を書いてください", class: "form-control" %>
        </div>
      
        <div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>

    </div>  
  </div>
</div>

