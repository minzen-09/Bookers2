<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
     <div class="container">
      <a class="navbar-brand" href="/">
       <span>Bookers</span>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" 
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <li>
            <%= link_to 'Home', user_path(current_user.id), style: "color: white; text-decoration: none;" %>
          </li>
          <li>
            <%= link_to 'Users', users_path, style: "color: white; text-decoration: none;" %>
          </li>
          <li>
            <%= link_to 'Books', books_path, style: "color: white; text-decoration: none;" %>
          </li>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, style: "color: white; text-decoration: none;" %>
          </li>
        <% else %>
          <li>
            <%= link_to 'Home', root_path, style: "color: white; text-decoration: none;" %>
          </li>
          <li>
            <%= link_to 'About', about_path, style: "color: white; text-decoration: none;" %>
          </li>
          <li>
            <%= link_to "Sign up", new_user_registration_path, style: "color: white; text-decoration: none;" %>
          </li>
          <li>
            <%= link_to "Log in", new_user_session_path, style: "color: white; text-decoration: none;" %>
          </li>
      <% end %>      
        </ul>
      </div>
     </div>
    </nav>
  </header>

  <main>
  <% if flash.present? %>
    <div class="flash-messages">
      <% flash.each do |type, message| %>
        <% type_class = type.to_s == "alert" ? "error" : "success" %>
        <div class="flash flash-<%= type_class %>">
          <%= message %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
    </div>
  </div>
  <%= yield %>
</main>

  <footer>
    <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
       </div>
      </div>
    </div>
  </footer>
</body>
  
</html>
